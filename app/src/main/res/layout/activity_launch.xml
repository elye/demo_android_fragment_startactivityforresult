<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LaunchActivity">

    <Button
        android:id="@+id/btn_activity_bug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity always create Fragment onCreate"
        app:layout_constraintBottom_toTopOf="@id/btn_activity_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_activity_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity create Fragment onCreate when savedInstanceState null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_activity_bug" />

</androidx.constraintlayout.widget.ConstraintLayout>